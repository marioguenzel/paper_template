\newcommand{\do@cev}[2]{%
	\vbox{\offinterlineskip
		\sbox\z@{$\m@th#1 x$}%
		\ialign{##\cr
			\hidewidth\reflectbox{$\m@th#1\vec{}\mkern2mu$}\hidewidth\cr
			\noalign{\kern-\ht\z@}
			$\m@th#1#2$\cr
		}%
	}%
}
